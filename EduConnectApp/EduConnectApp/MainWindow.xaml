<Window x:Class="EduConnectApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:uc="clr-namespace:EduConnectApp.UserControlCustom"
        xmlns:viewuc ="clr-namespace:EduConnectApp.ViewUCs"
        xmlns:local="clr-namespace:EduConnectApp"
        xmlns:vm="clr-namespace:EduConnectApp.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        DataContext="MainViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto">
            </RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <!--App Name-->
        <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Grid.RowSpan="2"
                Grid.ColumnSpan="3"
                VerticalAlignment="Center">
            <TextBlock FontSize="24" HorizontalAlignment="Center" Text="EDU" Foreground="{StaticResource Yale Blue}"/>
            <TextBlock FontSize="24" HorizontalAlignment="Center" Text="CONNECT" Foreground="{StaticResource Yale Blue}"/>
        </StackPanel>

        <!--Menu-->
        <Border CornerRadius="0 100 0 0" Grid.Row="3"
                Grid.Column="0"
                Grid.RowSpan="10"
                Grid.ColumnSpan="3"
                Background="{StaticResource Yale Blue}">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>

                <!--Menu-->
                <StackPanel 
                x:Name="MenuContainer" VerticalAlignment="Center"
                     IsEnabled="{Binding IsChecked, ElementName=EnableListBox}">
                    <!--DockPanel.Dock="Top">-->

                    <!--Trang chủ-->
                    <RadioButton 
                    Name="Home"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0 10 0 10" IsChecked="True"
                             >
                        <StackPanel 
                        Orientation="Horizontal">
                            <materialDesign:PackIcon 
                            Kind="Cog"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            Width="40"
                            Height="40"/>
                            <TextBlock  x:Name="text1"
                            Text=" Trang chủ"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            FontSize="40"
                            />
                        </StackPanel>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding navHome}"></i:InvokeCommandAction>
                                <i:InvokeCommandAction Command="{Binding update}" CommandParameter="{Binding ElementName=text1}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>

                    <!--Lớp-->
                    <RadioButton 
                    Name="Class"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0 10 0 10"
                             >
                        <StackPanel 
                        Orientation="Horizontal">
                            <materialDesign:PackIcon 
                            Kind="Cog"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            Width="40"
                            Height="40"/>
                            <TextBlock x:Name="text2"
                            Text=" Lớp"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            FontSize="40"
                            />
                        </StackPanel>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding navClass}"></i:InvokeCommandAction>
                                <i:InvokeCommandAction Command="{Binding update}" CommandParameter="{Binding ElementName=text2}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>

                    <!--Điểm-->
                    <RadioButton 
                    Name="Score"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0 10 0 10"
                             >
                        <StackPanel 
                        Orientation="Horizontal">
                            <materialDesign:PackIcon 
                            Kind="Cog"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            Width="40"
                            Height="40"/>
                            <TextBlock 
                            Text=" Điểm"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            FontSize="40"
                            />
                        </StackPanel>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding navGrade}"></i:InvokeCommandAction>
                                <i:InvokeCommandAction Command="{Binding update}" CommandParameter="{Binding ElementName=text1}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>

                    <!--Thống kê-->
                    <RadioButton 
                    Name="Statistic"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="0 10 0 10"
                             >
                        <StackPanel 
                        Orientation="Horizontal">
                            <materialDesign:PackIcon 
                            Kind="Cog"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            Width="40"
                            Height="40"/>
                            <TextBlock 
                            Text=" Thống kê"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            FontSize="40"
                            />
                        </StackPanel>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding navStatistic}"></i:InvokeCommandAction>
                                <i:InvokeCommandAction Command="{Binding update}" CommandParameter="{Binding ElementName=text1}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>

                    <!--Liên hệ-->
                    <RadioButton 
                    Name="Contact"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                        Margin="0 10 0 10"
                             >
                        <StackPanel 
                        Orientation="Horizontal">
                            <materialDesign:PackIcon 
                            Kind="Cog"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            Width="40"
                            Height="40"/>
                            <TextBlock 
                            Text=" Liên hệ"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            FontSize="40"
                            />
                        </StackPanel>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding navContact}"></i:InvokeCommandAction>
                                <i:InvokeCommandAction Command="{Binding update}" CommandParameter="{Binding ElementName=text1}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>

                    <!--Cài đặt-->
                    <RadioButton 
                    Name="Setting"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                        Margin="0 10 0 10"
                             >
                        <StackPanel 
                        Orientation="Horizontal">
                            <materialDesign:PackIcon 
                            Kind="Cog"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            Width="40"
                            Height="40"/>
                            <TextBlock 
                            Text=" Cài đặt"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            FontSize="40"
                            />
                        </StackPanel>
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding navSetting}"></i:InvokeCommandAction>
                                <i:InvokeCommandAction Command="{Binding update}" CommandParameter="{Binding ElementName=text1}"></i:InvokeCommandAction>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </RadioButton>

                </StackPanel>

                <StackPanel VerticalAlignment="Center" Grid.Row="1" Margin="10 10 10 25">
                    <materialDesign:PackIcon 
                            Kind="Cog"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Width="36"
                            Height="36"/>
                    <TextBlock 
                            Text="Đăng xuất"
                            Foreground="{StaticResource White}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            FontSize="36"
                            />
                </StackPanel>

            </Grid>
        </Border>

        <ContentControl Content="{Binding CurrentViewModel}" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="10" Grid.RowSpan="10"  Background="SeaGreen" Width="1026">
            <ContentControl.Resources>
                <!--<DataTemplate DataType="{x:Type viewmodel:HomeViewModel}">-->
                <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                    <viewuc:HomeUC></viewuc:HomeUC>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ClassViewModel}">
                    <viewuc:ClassUC></viewuc:ClassUC>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:GradeViewModel}">
                    <viewuc:GradeUC></viewuc:GradeUC>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:StatisticViewModel}">
                    <viewuc:StatisticUC></viewuc:StatisticUC>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:ContactViewModel}">
                    <viewuc:ContactUC></viewuc:ContactUC>
                </DataTemplate>
                <DataTemplate DataType="{x:Type vm:SettingViewModel}">
                    <viewuc:SettingUC></viewuc:SettingUC>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>


    </Grid>
</Window>
